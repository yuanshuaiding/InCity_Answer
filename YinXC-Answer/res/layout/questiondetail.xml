<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/topguid" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#458B00"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#F5F5F5" >

                <TextView
                    android:id="@+id/left"
                    android:layout_width="15dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/bg_left" />

                <TextView
                    android:id="@+id/right"
                    android:layout_width="15dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_right" />

                <LinearLayout
                    android:id="@+id/main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/right"
                    android:layout_toRightOf="@+id/left"
                    android:background="#FFFFFF"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:text="question" />
					<TextView 
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:textSize="14sp"
					    android:layout_marginTop="5dp"
					    android:layout_marginBottom="5dp"
					    android:textColor="#ffffff"
					    android:text="请选择正确答案："
					    android:background="#458B00"/>
					<!-- 答案选项 -->
                    <RadioGroup
                        android:id="@+id/rdg_choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                    </RadioGroup>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/btn_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/main"
                        android:layout_centerHorizontal="true"
                        android:text="确定" />

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/btn_answer"
                        android:layout_marginRight="16dp"
                        android:text=">>" />

                    <Button
                        android:id="@+id/btn_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/btn_answer"
                        android:layout_marginLeft="16dp"
                        android:text="&lt;&lt;" />

                    <Button
                        android:id="@+id/btn_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/btn_next"
                        android:layout_centerHorizontal="true"
                        android:text="查看结果"
                        android:visibility="gone" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>